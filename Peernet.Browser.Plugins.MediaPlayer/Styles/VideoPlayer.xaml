    <SolidColorBrush x:Key="DefaultBrush" Color="#EE796F" />
    <SolidColorBrush x:Key="icon_normal_color" Color="#EE796F" />
    <SolidColorBrush x:Key="icon_hover_color" Color="#FA9D95" />
    <SolidColorBrush x:Key="icon_pressed_color" Color="#E55A50" />
    <SolidColorBrush x:Key="icon_disabled_color" Color="#2B2A2A" />

    <Style TargetType="{x:Type controls:VideoPlayer}">
        <Setter Property="Background" Value="Black" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#F6F6F6" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:VideoPlayer}">
                    <Border Margin="{TemplateBinding Margin}" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <uc:VideoView x:Name="PART_VideoView" Grid.RowSpan="2" Panel.ZIndex="0" />
                                <StackPanel Panel.ZIndex="1" Orientation="Horizontal">
                                    <TextBlock x:Name="txtIsVlcLoading" Text="VLC is loading..." Visibility="Collapsed" />
                                </StackPanel>

                                <Border x:Name="videoMaskLayer" Background="#000000" Visibility="Collapsed" />

                                <Border x:Name="PART_MouseOver_Area" Grid.Row="1"
                                    Panel.ZIndex="1" Background="Transparent">
                                    <Border x:Name="PART_Bottom_Tool" Height="70" Panel.ZIndex="2"
                                        Background="#000000" RenderTransformOrigin="0.5,1">
                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="30" />
                                            </Grid.ColumnDefinitions>

                                            <controls:PathButton x:Name="PART_Btn_Slower" Grid.Row="0" Grid.Column="0"
                                                MouseOverPathColor="{StaticResource icon_hover_color}"
                                                NormalPathColor="{StaticResource icon_normal_color}"
                                                PathData="{StaticResource icon_faster}"
                                                PathWidth="12"
                                                PressedPathColor="{StaticResource icon_pressed_color}"
                                                RenderTransformOrigin="0.5, 0.5">
                                                <controls:PathButton.RenderTransform>
                                                    <RotateTransform Angle="180" />
                                                </controls:PathButton.RenderTransform>
                                            </controls:PathButton>
                                            <controls:VideoSlider x:Name="PART_Slider" Grid.Row="0" DecreaseColor="{StaticResource icon_normal_color}"  Grid.Column="1" Grid.ColumnSpan="3"
                                                Background="Transparent" IsMoveToPointEnabled="True" IsVideoVisibleWhenPressThumb="False" SnapsToDevicePixels="True" UseLayoutRounding="True" />
                                            <controls:PathButton x:Name="PART_Btn_Faster" Grid.Row="0" Grid.Column="4" MouseOverPathColor="{StaticResource icon_hover_color}" NormalPathColor="{StaticResource icon_normal_color}"
                                                PathData="{StaticResource icon_faster}" PathWidth="12" PressedPathColor="{StaticResource icon_pressed_color}" />
                                            <Grid Grid.Row="1" Grid.ColumnSpan="5">
                                                <TextBlock x:Name="PART_Video_Time" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                                                <Run x:Name="PART_Time_Current" />
                                                <Run Text=" / " />
                                                <Run x:Name="PART_Time_Total" />
                                                </TextBlock>
                                                <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
                                                    <controls:PathButton x:Name="PART_Btn_Stop"
                                                        DisabledPathColor="{StaticResource icon_disabled_color}"
                                                        MouseOverPathColor="{StaticResource icon_hover_color}"
                                                        NormalPathColor="{StaticResource icon_normal_color}"
                                                        PathData="{StaticResource icon_stop}"
                                                        PathWidth="11"
                                                        PressedPathColor="{StaticResource icon_pressed_color}" />
                                                    <controls:PathButton x:Name="PART_Btn_Pause" Margin="25,0,0,0" DisabledPathColor="{StaticResource icon_disabled_color}" MouseOverPathColor="{StaticResource icon_hover_color}" NormalPathColor="{StaticResource icon_normal_color}"
                                                        PathData="{StaticResource icon_pause}" PathWidth="17" PressedPathColor="{StaticResource icon_pressed_color}" Visibility="Collapsed" />
                                                    <controls:PathButton x:Name="PART_Btn_Play" Margin="25,0,0,0"
                                                        DisabledPathColor="{StaticResource icon_disabled_color}"
                                                        MouseOverPathColor="{StaticResource icon_hover_color}"
                                                        NormalPathColor="{StaticResource icon_normal_color}"
                                                        PathData="{StaticResource icon_play}"
                                                        PathWidth="17"
                                                        PressedPathColor="{StaticResource icon_pressed_color}" />
                                                </StackPanel>
                                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                                                    <controls:PathButton x:Name="PART_Btn_OpenFile" Margin="20,0" PathData="{StaticResource icon_openfile}" PathWidth="16"
                                                        DisabledPathColor="{StaticResource icon_disabled_color}" MouseOverPathColor="{StaticResource icon_hover_color}" NormalPathColor="{StaticResource icon_normal_color}"
                                                         PressedPathColor="{StaticResource icon_pressed_color}" />
                                                    <controls:PathButton x:Name="PART_Btn_Volume" Margin="0,0,0,0"
                                                        DisabledPathColor="{StaticResource icon_disabled_color}"
                                                        MouseOverPathColor="{StaticResource icon_hover_color}"
                                                        NormalPathColor="{StaticResource icon_normal_color}"
                                                        PathData="{StaticResource icon_volume_large}"
                                                        PathWidth="11"
                                                        PressedPathColor="{StaticResource icon_pressed_color}" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Border>
                            </Grid>
                        </Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="ShowVideoTool">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Bottom_Tool" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CircleEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="HideVideoTool">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Bottom_Tool" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                                                <EasingDoubleKeyFrame.EasingFunction>
                                                    <CircleEase EasingMode="EaseInOut"/>
                                                </EasingDoubleKeyFrame.EasingFunction>
                                            </EasingDoubleKeyFrame>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPlaying" Value="True">
                            <Setter TargetName="PART_Bottom_Tool" Property="Background" Value="#C01E1F1F" />
                            <Setter TargetName="videoMaskLayer" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsPlaying" Value="False">
                            <Setter TargetName="videoMaskLayer" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>